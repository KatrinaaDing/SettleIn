<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/addNewFacilityTitle"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_weight="1"
        android:text="Add a New Facility"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/addNewFacilityContent"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Add a facility that you want to know how far from a property. E.g. Coles, KFC, Restaurants..." />

    <EditText
        android:id="@+id/facilityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text" />


</LinearLayout>