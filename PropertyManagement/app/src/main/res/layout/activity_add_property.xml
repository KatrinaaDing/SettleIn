<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_property_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="50dp"
        android:paddingHorizontal="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/inspectionDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inspection Date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/inspectionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/placeholder_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/inspectionTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inspection Time"
                android:paddingTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/inspectionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingTop="20dp"
                    android:text="@string/placeholder_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a valid url (can copy): https://www.example.com,
                https://www.domain.com.au/3-01-83-bay-street-brighton-vic-3186-2018787564,
                https://www.domain.com.au/24-gardiner-parade-glen-iris-vic-3146-16674780,
                https://www.domain.com.au/1207-408-lonsdale-street-melbourne-vic-3000-2018776858"
                android:textIsSelectable="true"
                android:paddingTop="20dp"
                android:textColor="@color/purple_500"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/urlInputLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter url here"
                    android:paddingVertical="20dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scrapeUrlBtn"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:checkable="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="12dp"
                    app:icon="@drawable/baseline_search_white_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:textSize="@dimen/medium_title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <fragment
                android:id="@+id/auto_property_fragment"
                android:name="com.example.property_management.ui.fragments.base.AutocompleteFragment"
                tools:layout="@layout/fragment_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!--  property amenities settings  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <!--  bedroom  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bedroom"
                        android:textSize="10pt"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"/>
                    <com.example.property_management.ui.fragments.base.ArrowNumberPicker
                        android:id="@+id/bedroomNumberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:direction="horizontal"
                        />
                </LinearLayout>
                <!--  bathroom  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bathroom"
                        android:textSize="10pt"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"/>
                    <com.example.property_management.ui.fragments.base.ArrowNumberPicker
                        android:id="@+id/bathroomNumberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:direction="horizontal"
                        />
                </LinearLayout>
                <!--  parking  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parking"
                        android:textSize="10pt"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"/>
                    <com.example.property_management.ui.fragments.base.ArrowNumberPicker
                        android:id="@+id/parkingNumberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:direction="horizontal"
                        />
                </LinearLayout>

            </LinearLayout>
                
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submitBtn"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="10dp"
        android:text="Submit"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>